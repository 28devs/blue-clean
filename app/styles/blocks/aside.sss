    &--dialog
      fill: #fff
    &--users
      fill: #fff
    &--up
      fill: #face3a
    &--graph
      fill: #f55a48
    &--star
      fill: #face3a
    &--cols
      fill: #67acdc
    &--widget
      fill: #f55a48
    &--package
      fill: #67acdc
    &--pulse
      fill: #fff
    &--settings
      fill: #fff

.aside__nav-link
  .icon
    size: 20px
    fill: #e5e9e1
