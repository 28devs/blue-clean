    &--dialog
      size: 18px 19px
    &--users
      size: 25px 19px
    &--up
      size: 14px 17px
    &--graph
      size: 25px 13px
    &--star
      size: 19px
    &--cols
      size: 18px 17px
    &--widget
      size: 17px
